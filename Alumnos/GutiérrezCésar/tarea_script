CREATE TABLE CLIENTE (
id_Cliente INT NOT NULL,
nombre_Cliente VARCHAR (20) NOT NULL,
estado VARCHAR (20) NOT NULL,
CONSTRAINT CLIENTE_PK PRIMARY KEY (id_Cliente)
)

CREATE TABLE ARTICULO (
no_Articulo INT NOT NULL,
nombre_Articulo VARCHAR (20) NOT NULL,
precio FLOAT NOT NULL,
CONSTRAINT ARTICULO_PK PRIMARY KEY (no_Articulo)
)

CREATE TABLE ORDEN (
id_Orden INT NOT NULL,
no_Articulo INT NOT NULL,
cantidad INT NOT NULL,
CONSTRAINT ORDEN_UNI UNIQUE (id_Orden),
CONSTRAINT ORDEN_PK PRIMARY KEY (id_Orden,no_Articulo),
CONSTRAINT ARTICULO_FK FOREIGN KEY (no_Articulo) REFERENCES ARTICULO (no_Articulo)
)

CREATE TABLE FECHA (
id_Orden INT NOT NULL,
id_Cliente INT NOT NULL,
fecha DATE NOT NULL,
CONSTRAINT FECHA_PK PRIMARY KEY (id_Orden,id_Cliente),
CONSTRAINT ORDEN_FK FOREIGN KEY (id_Orden) REFERENCES ORDEN (id_Orden),
CONSTRAINT CLIENTE_FK FOREIGN KEY (id_Cliente) REFERENCES CLIENTE (id_Cliente)
)
